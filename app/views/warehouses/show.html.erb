<h1>Galpão <%= @warehouse.code %></h1>
<h2><%= @warehouse.description %></h2>
<div>
  <ul>
    <li><strong>Nome: </strong> <%= @warehouse.name %></li>
    <li><strong>Cidade: </strong> <%= @warehouse.city %></li>
    <li><strong>Área: </strong><%= @warehouse.area %> m2</li>
    <li><strong>Endereço: </strong><%= @warehouse.address %> <strong>CEP:</strong> <%= @warehouse.cep %></li>
    <li><strong>Código: </strong><%= @warehouse.code %></li>
  </ul>
  
</div>

<div>
  <%= link_to('Editar', edit_warehouse_path(@warehouse.id))%>  
  <br>
  <%= button_to('Remover', warehouse_path(@warehouse.id), method: :delete )%>
</div>

<div>
  <h2>Itens em Estoque</h2>
  <%= @stocks.each_pair do |pm, quantity| %>
    <%= quantity %> x <%= pm.sku%>
  <% end %>
</div>


<div>
  <%= link_to('Voltar', root_path)%>
</div>