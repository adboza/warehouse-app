<!DOCTYPE html>
<html>
  <head>
    <title>WarehouseApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    
  </head>

  <body>
    
    <header>  
      <%= link_to root_path do %>
        
      <% end %>
      <nav class="navbar navbar-expand-lg bg-light"> 
        <div class="container-fluid">
          <h1 class="navbar-brand" >Galp√µes & Estoque</h1>
          <%= link_to 'Fornecedores', suppliers_path, class:"nav-link" %>
          <%= link_to 'Modelos de Produtos', product_models_path, class:"nav-link" %>
          <%= link_to 'Registrar Pedido', new_order_path, class:"nav-link" %>
          <%= link_to 'Meus Pedidos', orders_path, class:"nav-link" %>
          <% if user_signed_in? %>
            <%= form_with(url: search_orders_path, method: :get, class:"d-flex") do |f| %>
              <%= f.label :query, 'Buscar Pedido' %>
              <%= f.text_field :query, class:"form-control me-2" %>
              <%= f.submit 'Buscar', class:"btn btn-outline-success"%>
            <% end %>
            <%= current_user.description %> |
            <%= button_to 'Sair', destroy_user_session_path, method: :delete, class:"btn btn-outline-success" %>
          <% else %>
            <%= link_to 'Entrar', new_user_session_path , class:"btn btn-outline-success" %>
          <% end %>
        </div>
      </nav>
    </header>
    <main>
    <div>
      <%= alert %>
      <%= notice %>
    </div>
    <%= yield %>
    </main>
    
  </body>
</html>
