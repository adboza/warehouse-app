
<section id="warehouses">
  <h2>Galpões</h2>
<div>  
<%= link_to('Cadastrar Galpão', new_warehouse_path)%>
</div>
  <div>
    <% @warehouses.each do |w| %>
      <h3><%= link_to(w.name, warehouse_path(w.id) ) %></h3>
    <dl>      
        <dt><strong>Código:</strong></dt>
        <dd> <%= w.code %></dd>
        <dt><strong>Cidade:</strong></dt>
        <dd> <%= w.city %></dd>
        <dt><strong>Área:</strong></dt>
        <dd> <%= w.area%> m2</dd>
    </dl>
    
    <% end %>
  </div>
  <%if @warehouses.empty? %>
    <%= 'Não existem galpões cadastrados!'%>
  
  <%end%>
</section>